<table class="table table-bordered block_plp-table">
    <thead class="thead-dark">
        <tr>
            <th></th>
            {{#options.columns}}
                <th scope="col">{{col_name}}</th>
            {{/options.columns}}
        </tr>
    </thead>
    <tbody>
        {{#value.rows}}
            <tr>
                <th scope="col">{{row_name}}</th>
                {{#cols}}
                    <td><input type="radio" class="form-check-input" name="{{elementname}}[{{row_id}}]" value="{{col_id}}"
                    {{#value}}checked{{/value}} /></td>
                {{/cols}}
            </tr>
        {{/value.rows}}
    </tbody>
</table>