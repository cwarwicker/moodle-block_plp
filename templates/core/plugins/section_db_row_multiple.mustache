{{#results}}
<div class="block_plp-section_db_multiple">
    <div class="block_plp-frozen-table">
        <table class="table table-bordered">
            <thead>
                <tr>
                    {{#headers}}
                        <th>{{name}}</th>
                    {{/headers}}
                </tr>
            </thead>
            <tbody>
                {{#rows}}
                    <tr>
                        {{#fields}}
                            <td>{{value}}</td>
                        {{/fields}}
                    </tr>
                {{/rows}}
            </tbody>
        </table>
    </div>
</div>
{{/results}}
{{^results}}
    <p>{{#str}}noresults, block_plp{{/str}}</p>
{{/results}}