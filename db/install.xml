<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/plp/db" VERSION="20180720" COMMENT="XMLDB file for Moodle blocks/plp"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="plp_settings" COMMENT="Settings table">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="pluginid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="setting" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="value" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="uid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
                <KEY NAME="pid_fk" TYPE="foreign" FIELDS="pluginid" REFTABLE="plp_plugins" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="pidset" UNIQUE="false" FIELDS="pluginid, setting"/>
                <INDEX NAME="upset" UNIQUE="false" FIELDS="userid, pluginid, setting"/>
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>
